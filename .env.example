# AEGIS Protocol Environment Configuration
# Copy this to .env and customize for your environment

# ===========================================
# AGENT CONFIGURATION
# ===========================================

# Agent Seeds (CHANGE THESE IN PRODUCTION!)
ORACLE_AGENT_SEED=oracle_agent_production_seed_change_me
VALIDATOR_AGENT_SEED=validator_agent_production_seed_change_me
ACTION_AGENT_SEED=action_agent_production_seed_change_me

# Agent Addresses
VALIDATOR_AGENT_ADDRESS=agent1qw8k3ek3ug7l3hl2d9c6rw7e5g8xz9x2p5y7j4m6n8b9v2
ACTION_AGENT_ADDRESS=agent1qx9n4fk4vh8m4im3e0d7sx8f6h9ya0y3q6z8k5n7o9c0w3

# ===========================================
# NETWORK CONFIGURATION
# ===========================================

# Internet Computer
ICP_URL=http://127.0.0.1:4943
DFX_NETWORK=local

# Agent Restart Policy
AGENT_RESTART_POLICY=unless-stopped

# API Fetch Intervals (seconds)
FETCH_INTERVAL_SECONDS=300.0

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# Enable/disable debug mode (ALWAYS false in production)
DEBUG_MODE=false

# Rate limiting
MAX_REQUESTS_PER_MINUTE=60

# Session timeout (minutes)
SESSION_TIMEOUT=30

# ===========================================
# PATHS CONFIGURATION
# ===========================================

# File paths
CANISTER_IDS_PATH=/app/dfx-local/canister_ids.json
IDENTITY_PEM_PATH=/app/identity.pem

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

# Log levels: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# Log format: json, text
LOG_FORMAT=json